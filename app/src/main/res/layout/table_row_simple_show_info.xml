<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:id="@+id/layout_place_info"
    android:columnCount="5"
    android:rowCount="2"
    tools:context=".PlaceInfoActivity"
    android:background="@drawable/selector"
    >

        <TextView
            android:text="99-12-31\n~\n99-12-31"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:id="@+id/simple_show_date"
            android:lineSpacingExtra="-3dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/simple_show_title"
            android:text="SAMPLE SHOW NAME"
            android:textColor="@color/colorTextBlack"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:gravity="center"
            android:width="100dp"/>
        <TextView
            android:text="99,999원"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:id="@+id/simple_show_price"
            android:textAlignment="center"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:text="전시, 공연, 강연, 테스트"
            android:layout_width="40dp"
            android:layout_marginRight="0dp"
            android:id="@+id/simple_show_category"
            android:textAlignment="center"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_gravity="center_vertical"/>

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FF909090"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_columnSpan="5"
        android:layout_column="0"
        android:layout_row="1"/>
</GridLayout>