<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_place_info"
        android:baselineAligned="false"
        android:animateLayoutChanges="true"
        tools:context=".PlaceInfoActivity">

        //메인 사진//////////////////////////////////////////////////////
        <ImageView
            android:id="@+id/placeInfoActivity_Photo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="true"/>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        //장소정보///////////////////////////////////////////////////
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:src="@drawable/img_place_info"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="장소명   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_PlaceName"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_height="0.5dp"
            android:background="#FF909090"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="분류   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_PlaceCategory"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_height="0.5dp"
            android:background="#FF909090"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="주소   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_PlaceAddress"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_height="0.5dp"
            android:background="#FF909090"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="문의   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_PlaceContact"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_height="0.5dp"
            android:background="#FF909090"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="소개   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_PlaceIntroduce"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginTop="10dp"
            android:background="#FF909090" />

        //관리자 정보///////////////////////////////////////////////////////

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="left"
                android:src="@drawable/img_manager_info"
                android:layout_marginBottom="5dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="관리자   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_ManagerName"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_height="0.5dp"
            android:background="#FF909090"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="연락처   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_ManagerContact"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>
        <View
            android:layout_height="0.5dp"
            android:background="#FF909090"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="35dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="E-Mail   "
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/infoActivity_ManagerEmail"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"/>
        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginTop="10dp"
            android:background="#FF909090" />

        //전시 및 공연 정보///////////////////////////////////////////////////

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="left"
                android:src="@drawable/img_show_info"
                android:layout_marginBottom="5dp"/>
        </TableRow>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"
            android:columnCount="5"
            android:rowCount="2">
            <TextView
                android:text="날짜"
                android:layout_width="57dp"
                android:textAlignment="center"
                android:layout_marginRight="15dp"
                android:id="@+id/simple_show_date"
                android:lineSpacingExtra="-3dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/simple_show_title"
                android:layout_width="120dp"
                android:text="제목"
                android:textColor="@color/colorTextBlack"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:gravity="center"
                android:width="100dp"/>
            <TextView
                android:text="가격"
                android:layout_width="60dp"
                android:layout_marginRight="10dp"
                android:id="@+id/simple_show_price"
                android:textAlignment="center"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:text="분류"
                android:layout_width="40dp"
                android:layout_marginRight="0dp"
                android:id="@+id/simple_show_category"
                android:textAlignment="center"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_gravity="center_vertical"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_column="4"
                android:layout_row="0"
                android:layout_gravity="center_vertical"/>
            <View
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF909090"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_columnSpan="5"
                android:layout_column="0"
                android:layout_row="1"/>

        </GridLayout>
    </GridLayout>
</ScrollView>